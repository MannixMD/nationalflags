# This file is for standardising the coding style between different editors
# http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{php,js,css,json,html,txt,md,yml}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = true

[*.yml]
indent_size = 4
indent_style = space
